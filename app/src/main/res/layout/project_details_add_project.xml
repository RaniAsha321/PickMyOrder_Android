                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/newlogo"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_60sdp" />

            </LinearLayout>


            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="12">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_rounded_black"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="left">


                                <EditText

                                    android:id="@+id/project_names_ad"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:filterTouchesWhenObscured="false"
                                    android:fontFamily="@font/raleway_medium"
                                    android:gravity="center_vertical"
                                    android:hint="Project Name"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/_20sdp"
                                    android:textColor="#333e48"
                                    android:textColorHint="#333e48"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                android:gravity="center">

                                <ImageView

                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:layout_marginRight="@dimen/_20sdp"
                                    android:background="@drawable/project_icon" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_corner_rounded"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:gravity="left">

                                <EditText

                                    android:id="@+id/customer_name_add"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:filterTouchesWhenObscured="false"
                                    android:fontFamily="@font/raleway_medium"
                                    android:gravity="center_vertical"
                                    android:hint="Customer Name"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/_20sdp"
                                    android:textColor="#333e48"
                                    android:textColorHint="#333e48"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_11sdp"
                                    android:layout_marginLeft="@dimen/_20sdp"
                                    android:layout_marginRight="@dimen/_20sdp"
                                    android:background="@drawable/customer_icon72" />


                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout

